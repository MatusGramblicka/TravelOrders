@page "/travelOrdersImproved"
@using TravelOrdersClient.Components

<h3>TravelOrder</h3>

<div class="row">
    <div class="col-md-5">
        <Search OnSearchChanged="SearchChanged" />
    </div>
    <div class="col-md-2">
        <a class="btn btn-success mb-1" href="/createTravelOrderImproved">New travel order (improved)</a>
    </div>
</div>
<div class="row">
    <div class="col">
        <TravelOrderTableImproved TravelOrders="TravelOrderList" OnDelete="DeleteTravelOrder" />
    </div>
</div>
<div class="row">
    <div class="col">
        <Pagination MetaData="MetaData" Spread="1" SelectedPage="SelectedPage" />
    </div>
    <div class="col">
        <PageSizeDropDown SelectedPageSize="SetPageSize" />
    </div>
</div>